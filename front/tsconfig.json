{
    "compilerOptions": {
        "types": ["node"],
        "noImplicitAny": true,
        "module": "es6",
        "target": "es5",
        "jsx": "react",
        "sourceMap": true,
        "lib": ["ES5", "ES6", "DOM"],
        "esModuleInterop": true,
        "typeRoots":[
            "./@types",
            "./node_modules",
            "./node_modules/@types",
            "./src/@types"
        ],
        "noImplicitThis": true,
        "strictNullChecks": true,
        "moduleResolution": "Node",
        "baseUrl": "./src/",
    }
}